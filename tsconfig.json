{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "sourceMap": true,
    "allowJs": false,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    // "moduleResolution": "node",

    "allowSyntheticDefaultImports": true,
    // "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "strictNullChecks": true

    // "listFiles": true


    /* should use linter... */
    // "allowUnreachableCode": false,
    // "noImplicitThis": true,
    // "noImplicitReturns": true
    // "noUnusedLocals": true,
    // "noUnusedParameters": true
  },

  "include": [
    "typings/**/*",
    "src/**/*"
  ],

  "exclude": [
    "node_modules",
    "build",
    "src2"
  ]
}